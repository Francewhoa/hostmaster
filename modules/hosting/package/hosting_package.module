    'description' => 'List of all packages',
    'page callback' => 'hosting_package_list',
    'page arguments' => array(1),
    'access arguments' => array('view package'),
    'type' => MENU_DEFAULT_LOCAL_TASK,
    'weight' => -1,
  );
