/**
 * Remove duplicate client nodes.
 *
 * Those may have been created in development versions of 2.x code, see
 * https://drupal.org/node/1146014
 */
function hosting_client_update_6003() {
  $q = db_query("SELECT n.nid FROM {node} n LEFT JOIN {hosting_client} hc ON n.nid = hc.nid WHERE n.type = :n.type AND hc.nid IS NULL;", array(':n.type' => 'client'));
  while ($nid = $q->fetchField()) {
    node_delete($nid);
  }
  // hook_update_N() no longer returns a $ret array. Instead, return
