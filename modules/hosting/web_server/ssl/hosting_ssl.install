/**
 * Remove SSL service records from hosting_service table.
 */
function hosting_ssl_uninstall() {
  db_delete('hosting_service')
    ->condition('service', 'http')
    ->condition('type', 'apache_ssl')
    ->execute();
  db_delete('hosting_service')
    ->condition('service', 'http')
    ->condition('type', 'nginx_ssl')
    ->execute();
}
